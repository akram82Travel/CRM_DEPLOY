@model IEnumerable<CRMSTUBSOFT.ViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="content-header-left col-md-12 col-12 mb-2 breadcrumb-new card">
            <div class="row no-gutters">
                <div class="col-md-3"><span style="padding-top: 9px; font-size: 16px; " class="content-header-title mb-0 d-inline-block">Liste des Sanctions</span></div>
                <div class="col-md-4" style=" padding-top: 8px;">
                    <div class="row breadcrumbs-top d-inline-block">
                        <div class="breadcrumb-wrapper">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="/">Tableau de Bord</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="/Crm_Sanction">Sanction</a>
                                </li>
                                <li class="breadcrumb-item active">
                                    Liste des Sanctions
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="btn-group pull-right">
                        <a href="@Url.Action("Create","Crm_Sanction")" class="btn btn-success"><i class="la la-plus"></i>Ajouter</a>
                    </div>
                </div>
            </div>


        </div>

    </div>

    <div class="card">
        <div class="card-content">
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Libelle Sanction
                            </th>
                            <th>
                                Note Sanction
                            </th>
                            <th>
                                Type Tache
                            </th>
                            <th>
                                Mode Tache
                            </th>
                            <th>
                                Chef de projet
                            </th>
                            <th>Type</th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Crm_Sanction.LibelleSanction)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Crm_Sanction.NoteSanction)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TypeTache.Libelle)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ModeTache.Libelle)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Respensable.Nom)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Crm_Sanction.TypeSanction)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Crm_Sanction.IdSanction }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.Crm_Sanction.IdSanction }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Crm_Sanction.IdSanction })
                                </td>
                            </tr>
                        }
                    </tbody>


                </table>
            </div>
                </div>
                </div>

            </div>
        

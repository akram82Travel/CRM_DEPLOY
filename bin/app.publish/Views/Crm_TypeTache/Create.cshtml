@model CRMSTUBSOFT.Crm_TypeTache

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">

    <div class="content-header">
        <div class="content-header-left col-md-12 col-12 mb-2 breadcrumb-new card">
            <div class="row no-gutters">
                <div class="col-md-3"><span style="padding-top: 9px; font-size: 16px; " class="content-header-title mb-0 d-inline-block">Liste type des tâches</span></div>
                <div class="col-md-6" style=" padding-top: 8px;">
                    <div class="row breadcrumbs-top d-inline-block">
                        <div class="breadcrumb-wrapper">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="/">Tableau de Bord</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="/Crm_TypeTache">Type Tâche</a>
                                </li>
                                <li class="breadcrumb-item active">
                                    Création Nouveau Type de tache
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>
               
            </div>


        </div>

    </div>



    <div class="card">
        <div class="card-content">
            <div class="card-body">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <div class="pull-right">
                            <input type="submit" value="Create" class="btn btn-success" />
                        </div>
                    </div>
                    <div class="form-horizontal">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label class="col-md-12">Code Type Tache</label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.CodeTypeTache, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.CodeTypeTache, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group col-md-6">
                                @Html.LabelFor(model => model.Libelle, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Libelle, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Libelle, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>


                    </div>
                }

            </div>
            </div>
        </div>
               

            </div>

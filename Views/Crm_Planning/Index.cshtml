@model IEnumerable<CRMSTUBSOFT.Crm_Planning>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="content-header-left col-md-12 col-12 mb-2 breadcrumb-new card">
            <div class="row no-gutters">
                <div class="col-md-3"><span style="padding-top: 9px; font-size: 16px; " class="content-header-title mb-0 d-inline-block">Liste des Plans</span></div>
                <div class="col-md-4" style=" padding-top: 8px;">
                    <div class="row breadcrumbs-top d-inline-block">
                        <div class="breadcrumb-wrapper">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="/">Tableau de Bord</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="/Crm_Planning">Planning</a>
                                </li>
                                <li class="breadcrumb-item active">
                                    Liste des Plans
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="btn-group pull-right">
                        <a href="@Url.Action("Create","Crm_Planning")" class="btn btn-success"><i class="la la-plus"></i>Ajouter</a>
                    </div>
                </div>
            </div>


        </div>

    </div>
    <div class="card">
        <div class="card-content">
            <div class="card-body">
                <table class="table table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                N° Plan
                            </th>
                            <th>
                                <label>DU</label>
                            </th>
                            <th>
                                <label>AU</label>
                            </th>
                            @*<th>
                                    @Html.DisplayNameFor(model => model.Titre)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>*@
                            <th>
                                <label>Responsable</label>
                            </th>
                            @*<th>
                                    @Html.DisplayNameFor(model => model.Nom)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Prenom)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.RaisonSocial)
                                </th>*@
                            <th style="width:11%"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id_Planning)
                                </td>
                                <td>
                                   @item.Datedebut.ToString().Replace(" 00:00:00", "")
                                </td>
                                <td>
                                    @item.DateFin.ToString().Replace(" 00:00:00", "")
                                </td>
                                @*<td>
                                        @Html.DisplayFor(modelItem => item.Titre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.CodeResponsable)
                                </td>
                                @*<td>
                                        @Html.DisplayFor(modelItem => item.Nom)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Prenom)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RaisonSocial)
                                    </td>*@
                                <td style="width:11%">
                                    @Html.ActionLink(" ", "Edit", new { id = item.Id_Planning }, new { @class = "success edit la la-pencil" }) |
                                    @Html.ActionLink(" ", "Details", new { id = item.Id_Planning }, new { @class = "warning details  la la-eye" })|
                                    @*@Html.ActionLink(" ", "Delete", new { id = item.Id_Planning }, new { @class = "danger delete  la la-trash-o" })*@
                                    <button class="btn p-0" name="delete" id="delete" data-id="@item.Id_Planning" onclick="openModaldelete('@item.Id_Planning', 'Planning N° ')">
                                        <i class="danger delete  la la-trash-o"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="modal" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">

                <h1 class="modal-title">Confirmation Suppression</h1>

                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                Modal body..
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" name="supprimer" id="supprimer" class="btn btn-danger" style="width:100px">Supprimer</button>
                <button type="button" class="btn btn-info" data-dismiss="modal" style="width:100px">Close</button>
            </div>

        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
var now = new Date();
now.setDate(now.getDate());
$('#Datedebut').val(now.toISOString().split('T')[0]);
    </script>
    @if (TempData["SuccessMesage"] != null)
    {
        <script>

  Swal.fire({
  position: 'top-center',
  icon: 'success',
  showConfirmButton: false,
  title: '@TempData["SuccessMesage"]',
  timer: 3000
})
        </script>
    }
<script>
    function openModaldelete(ID, name) {
    $(".modal-body").html("Voulez vous Supprimez " + name + ID);
    $("#myModal").modal('show');
    $("#supprimer").click(function () {
    window.location.href = "/Crm_Planning/DeleteConfirmed?id=" + ID
    });
    }
</script>
}
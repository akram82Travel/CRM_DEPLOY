@model CRMSTUBSOFT.Crm_CycleExecTache

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="content-header-left col-md-12 col-12 mb-2 breadcrumb-new card">
            <div class="row no-gutters">
                <div class="col-md-3"><span style="padding-top: 9px; font-size: 16px; " class="content-header-title mb-0 d-inline-block">Modifier Durée tache</span></div>
                <div class="col-md-6" style=" padding-top: 8px;">
                    <div class="row breadcrumbs-top d-inline-block">
                        <div class="breadcrumb-wrapper">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="/">Tableau de Bord</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="/Crm_TacheReclamation">Taches</a>
                                </li>
                                <li class="breadcrumb-item active">
                                    Modifier durée Tache
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

    <div class="card">
        <div class="card-content">
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                        <div class="text-right">
                            <button type="submit" class="btn btn-success">
                                <i class="la la-plus"></i> Enregistrer
                            </button>
                            
                        </div>
                    <hr />
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.NumeroTache, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.HiddenFor(model => model.Nomutilisateur, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.HiddenFor(model => model.OldStatus, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.HiddenFor(model => model.NewStatus, new { htmlAttributes = new { @class = "form-control" } })

                        <div class="form-group row">
                            <div class="offset-md-2 col-md-4">
                                <label for="DateDebutExecution" class="col-form-label"> Date Debut Tache </label>
                                <br />
                                <input type="datetime-local" name="DateDebutExecution" id="DateDebutExecution" class="form-control col" value="@ViewData["d1"].ToString()" />
                                @*@Html.EditorFor(model => model.DateDebutExecution, new { htmlAttributes = new { @class = "form-control", @type = "datetime-local" }, @value = @ViewData["d1"].ToString() })*@
                                @Html.ValidationMessageFor(model => model.DateDebutExecution, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-4">
                                <label for="DateFinExecution" class="col-form-label"> Date Fin Tache </label>
                                <br />
                                <input type="datetime-local" name="DateFinExecution" id="DateDebutExecution" class="form-control" value="@ViewData["d2"].ToString()" />
                                @* @Html.EditorFor(model => model.DateFinExecution, new { htmlAttributes = new { @class = "form-control", @type = "datetime-local" }, @value = @ViewData["d2"] })*@
                                @Html.ValidationMessageFor(model => model.DateFinExecution, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-4">
                                @Html.HiddenFor(model => model.Duree, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>

                        @Html.HiddenFor(model => model.idTacheExec)
                        @Html.HiddenFor(model => model.Encours)


                    </div>
                }
            </div>
            </div>
        </div>
      </div>
@model CRMSTUBSOFT.Crm_Projet

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <div class="content-header row">
        <div class="content-header-left col-md-6 col-12 mb-2 breadcrumb-new">
            <h3 class="content-header-title mb-0 d-inline-block">Editer Projet</h3>
            <div class="row breadcrumbs-top d-inline-block">
                <div class="breadcrumb-wrapper col-12">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="/">Tableau de Bord</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="/Crm_Projet">Projet</a>
                        </li>
                        <li class="breadcrumb-item active">
                            Liste des Projets
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-lg-12 col-md-12">
            <div class="card">
                <div class="card-header pb-0">
                    <h4 class="card-title">	&nbsp;	&nbsp;	&nbsp;	&nbsp;	&nbsp;</h4>
                    <div class="heading-elements">
                        <button type="submit" class="btn btn-success pull-right" style=" margin-top: -12px;"><i class="la la-save"></i> Enregistrer</button>
                    </div>
                    <hr />
                </div>

                <div class="card-body row pt-0">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.CodeProjet)

                    <div class="col-md-4">
                        @Html.LabelFor(model => model.CodeTypeProjet, htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-10">
                            <select id="CodeTypeProjet" name="CodeTypeProjet" class="form-control" disabled>
                                <option value="">Choisir Un Type de projet</option>
                                <option value="0" @(Model.CodeTypeProjet == "0" ? "selected" : "")>Développement Web</option>
                                <option value="1" @(Model.CodeTypeProjet == "1" ? "selected" : "")>Développment ERP</option>
                                <option value="2" @(Model.CodeTypeProjet == "2" ? "selected" : "")>Développement SQL</option>
                                <option value="3" @(Model.CodeTypeProjet == "3" ? "selected" : "")>Développement ROBOT</option>
                                <option value="4" @(Model.CodeTypeProjet == "4" ? "selected" : "")>Développement Scrapping</option>
                                <option value="5" @(Model.CodeTypeProjet == "5" ? "selected" : "")>Développement BI</option>
                                <option value="6" @(Model.CodeTypeProjet == "6" ? "selected" : "")>Développement Mobile</option>
                                <option value="7" @(Model.CodeTypeProjet == "7" ? "selected" : "")>Développement Divers</option>
                                <option value="8" @(Model.CodeTypeProjet == "7" ? "selected" : "")>Développement Desktop</option>
                            </select>
                            @Html.ValidationMessageFor(model => model.CodeTypeProjet, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-md-4">
                        @Html.LabelFor(model => model.Libelle, htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Libelle, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Libelle, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-md-4">
                        @Html.LabelFor(model => model.MontantProjet, htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.MontantProjet, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MontantProjet, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-md-4">
                        @Html.LabelFor(model => model.DateDeclenchement, htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.DateDeclenchement, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.DateDeclenchement, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-md-4">
                        @Html.LabelFor(model => model.DateFinPrevu, htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.DateFinPrevu, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.DateFinPrevu, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-md-4">
                        @Html.LabelFor(model => model.Cloture, htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-10">
                            <div class="checkbox">
                                @Html.EditorFor(model => model.Cloture, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Cloture, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        @Html.LabelFor(model => model.DateCloture, htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.DateCloture, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.DateCloture, "", new { @class = "text-danger" })
                        </div>
                    </div>



                </div>




            </div>
            </div>
        </div>


                }

                <div>
                    @Html.ActionLink("Back to List", "Index")
                </div>

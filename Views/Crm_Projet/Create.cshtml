@model CRMSTUBSOFT.Crm_Projet

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="content-header-left col-md-12 col-12 mb-2 breadcrumb-new card">
            <div class="row no-gutters">
                <div class="col-md-3"><span style="padding-top: 9px; font-size: 16px; " class="content-header-title mb-0 d-inline-block">Créer un Projet</span></div>
                <div class="col-md-4" style=" padding-top: 8px;">
                    <div class="row breadcrumbs-top d-inline-block">
                        <div class="breadcrumb-wrapper">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="/">Tableau de Bord</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="/Crm_Projet">Projet</a>
                                </li>
                                <li class="breadcrumb-item active">
                                    Création
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>

            </div>


        </div>

    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="card">
                    <div class="card-header pb-0">
                        <h4 class="card-title">	&nbsp;	&nbsp;	&nbsp;	&nbsp;	&nbsp;</h4>
                        <div class="heading-elements">
                            <button type="submit" class="btn btn-success pull-right" style=" margin-top: -12px;"><i class="la la-save"></i> Enregistrer</button>
                        </div>
                        <hr />
                    </div>
                    <div class="card-body row pt-0">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="col-md-4">


                            <div class="form-group row no-gutters">
                                <label class="control-label col-md-12">Type de projet</label>
                                <div class="col-sm-12">
                                    <select id="CodeTypeProjet" name="CodeTypeProjet" class="form-control">
                                        <option value="">Choisir Un Type de projet</option>
                                        <option value="8">Développement Desktop</option>
                                        <option value="0">Développement Web</option>
                                        <option value="1">Développment ERP</option>
                                        <option value="2">Développement SQL</option>
                                        <option value="3">Développement ROBOT</option>
                                        <option value="4">Développement Scrapping</option>
                                        <option value="5">Développement BI</option>
                                        <option value="6">Développement Mobile</option>
                                        <option value="7">Développement Divers</option>
                                    </select>
                                    @Html.ValidationMessageFor(model => model.CodeTypeProjet, "", new { @class = "text-danger" })
                                </div>
                            </div>


                            <div class="form-group row no-gutters">
                                <label class="control-label col-md-12">Responsable de projet</label>
                                <div class="col-sm-12">
                                    @Html.DropDownListFor(model => model.ResponsableProjet, (IEnumerable<SelectListItem>)ViewData["ListResponsable"], "Sélectionner un Responsable", new { @class = "select2 form-control", @id = "ResponsableProjet" })
                                    @Html.ValidationMessageFor(model => model.ResponsableProjet, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row no-gutters">
                                <label class="control-label col-md-12">Objectif de projet</label>
                                <div class="col-sm-12">
                                    @Html.EditorFor(model => model.ObjectifProjet, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.ObjectifProjet, "", new { @class = "text-danger" })
                                </div>
                            </div>






                        </div>


                        <div class="col-md-4">

                            <div class="form-group row no-gutters">
                                <label class="control-label col-md-12">Titre de projet</label>
                                <div class="col-sm-12">
                                    @Html.EditorFor(model => model.Libelle, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Libelle, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row no-gutters">
                                <label for="DescriptionTache" class="control-label col-md-12"> Description </label>
                                <div class="col-sm-12">
                                    @Html.TextAreaFor(model => model.DescriptionProjet, htmlAttributes: new { @class = "form-control", @required = "required" })
                                    @Html.ValidationMessageFor(model => model.DescriptionProjet, "", new { @class = "text-danger" })
                                    <div class="invalid-feedback">Entrer une Description!</div>
                                </div>
                            </div>


                        </div>

                       

                        <div class="col-md-4">

                            <div class="form-group row no-gutters">
                                <label class="control-label col-md-12">Date Declenchement</label>
                                <div class="col-sm-12">
                                    @Html.EditorFor(model => model.DateDeclenchement, new { htmlAttributes = new { @class = "form-control", @type = "Datetime-local" } })
                                    @Html.ValidationMessageFor(model => model.DateDeclenchement, "", new { @class = "text-danger" })
                                </div>
                            </div>


                            <div class="form-group row no-gutters">
                                <label class="control-label col-md-12">Date Fin Prevu</label>
                                <div class="col-sm-12">
                                    @Html.EditorFor(model => model.DateFinPrevu, new { htmlAttributes = new { @class = "form-control", @type = "Datetime-local" } })
                                    @Html.ValidationMessageFor(model => model.DateFinPrevu, "", new { @class = "text-danger" })
                                </div>
                            </div>




                        </div>

                        <div class="col-md-4">
                            @Html.LabelFor(model => model.Cloture, htmlAttributes: new { @class = "control-label col-md-12" })
                            <div class="col-md-12">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.Cloture, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Cloture, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            @Html.LabelFor(model => model.DateCloture, htmlAttributes: new { @class = "control-label col-md-12" })
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.DateCloture, new { htmlAttributes = new { @class = "form-control", @type = "Datetime-local" } })
                                @Html.ValidationMessageFor(model => model.DateCloture, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<script type="text/javascript">
    var now = new Date();
    now.setMinutes(now.getMinutes() - now.getTimezoneOffset());
    document.getElementById('DateDeclenchement').value = now.toISOString().slice(0, 16);

    now.setMinutes(now.getMinutes() - now.getTimezoneOffset());
    document.getElementById('DateFinPrevu').value = now.toISOString().slice(0, 16);

    now.setMinutes(now.getMinutes() - now.getTimezoneOffset());
    document.getElementById('DateCloture').value = now.toISOString().slice(0, 16);
</script>
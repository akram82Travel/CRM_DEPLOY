@model CRMSTUBSOFT.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="content-wrapper">
    <div class="content-header row">
    </div>
    <div class="content-body">
        <section class="row flexbox-container">
            <div class="col-12 d-flex align-items-center justify-content-center">
                <div class="col-lg-4 col-md-8 col-10 box-shadow-2 p-0">
                    <div class="card border-grey border-lighten-3 px-2 py-2 m-0">
                        <div class="card-header border-0">
                            <div class="card-title text-center">
                                <img src="~/Content/img/logo.jpg" alt="Register">
                            </div>
                            <h6 class="card-subtitle line-on-side text-muted text-center font-small-3 pt-2">
                                <span>Create Account</span>
                            </h6>
                        </div>
                        <div class="card-content">
                            <div class="card-body">
                                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal form-simple", role = "form" }))
                                {
                                    @Html.AntiForgeryToken()

                                    @Html.ValidationSummary("", new { @class = "text-danger" })
                                <fieldset class="form-group position-relative has-icon-left mb-1">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-lg input-lg", @placeholder = "Email" })
                                    <div class="form-control-position">
                                        <i class="la la-user"></i>
                                    </div>
                                </fieldset> 
                                
                                <fieldset class="form-group position-relative has-icon-left mb-1">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-lg input-lg", @placeholder = "Password" })
                                    <div class="form-control-position">
                                        <i class="la la-key"></i>
                                    </div>
                                </fieldset>  
                                
                                <fieldset class="form-group position-relative has-icon-left mb-1">
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control form-control-lg input-lg", @placeholder = "Confirm Password" })
                                    <div class="form-control-position">
                                        <i class="la la-key"></i>
                                    </div>
                                </fieldset>
                                <button type="submit" class="btn btn-info btn-lg btn-block"><i class="ft-unlock"></i> Register</button>
                                        }

                                       
                                </div>
                            <p class="text-center">Vous avez dejas un compte ? <a href="Login" class="card-link">Login</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

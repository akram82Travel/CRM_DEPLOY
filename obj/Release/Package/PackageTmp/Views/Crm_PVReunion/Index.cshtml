@model IEnumerable<CRMSTUBSOFT.Crm_PVReunion>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">


    <div class="content-header">
        <div class="content-header-left col-md-12 col-12 mb-2 breadcrumb-new card">
            <div class="row no-gutters">
                <div class="col-md-3"><span style="padding-top: 9px; font-size: 16px; " class="content-header-title mb-0 d-inline-block">Liste des PV Réunions</span></div>
                <div class="col-md-4" style=" padding-top: 8px;">
                    <div class="row breadcrumbs-top d-inline-block">
                        <div class="breadcrumb-wrapper">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="/">Tableau de Bord</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="/Crm_PVReunion">PV Réunions</a>
                                </li>
                                <li class="breadcrumb-item active">
                                    Liste des PV Réunions
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="btn-group float-md-right">
                        <a href="@Url.Action("Create","Crm_PVReunion")" class="btn btn-success"><i class="la la-plus"></i>  Ajouter</a>

                        <button class="btn btn-primary pull-right" type="button" data-toggle="collapse" data-target="#collapseFilter" aria-expanded="false" aria-controls="collapseExample">
                            <i class="la la-filter"></i>   Filtrer
                        </button>
                    </div>
                </div>
            </div>


        </div>

    </div>
    <div class="card">
        <div class="card-content">
            <div class="card-body">
                <table class="table table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th>N°Projet</th>
                            <th>
                                @Html.DisplayNameFor(model => model.Projet)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Module)
                            </th>
                            @*<th>
                                    Créateur
                                </th>*@
                            <th>
                                @Html.DisplayNameFor(model => model.Objet)
                            </th>
                            <th>
                                Date réunion
                            </th>
                            <th>
                                Date Prévue de réunion
                            </th>
                            @*<th>
                                    @Html.DisplayNameFor(model => model.Client.Respensable)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Crm_Description.NumeroPVReunion)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Crm_Personne.NomPrenom)
                                </th>*@
                            <th style="width:11%"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NumeroPVReunion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Projet)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Module)
                                </td>
                                @*<td>
                                        @Html.DisplayFor(modelItem => item.Createur)
                                    </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.Objet)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateReunion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DatePrevusReunion)
                                </td>
                                @*<td>
                                        @Html.DisplayFor(modelItem => item.Client.Respensable)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Crm_Description.NumeroPVReunion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Crm_Personne.NomPrenom)
                                    </td>*@
                            <td style="width:11%">
                                @Html.ActionLink(" ", "Edit", new { id = item.NumeroPVReunion }, new { @class = "success edit  la la-pencil" }) |
                                @Html.ActionLink(" ", "Details", new { id = item.NumeroPVReunion }, new { @class = "warning details  la la-eye" }) |
                                @*@Html.ActionLink(" ", "Delete", new { id = item.NumeroPVReunion }, new { @class = "danger delete  la la-trash-o" })*@
                                <button class="btn p-0" name="delete" id="delete" data-id="@item.NumeroPVReunion" onclick="openModaldelete('@item.NumeroPVReunion', 'PVReunion N° ')">
                                    <i class="danger delete  la la-trash-o"></i>
                                </button>
                            </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>


        </div>
    </div>
</div>
<div class="modal" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">

                <h1 class="modal-title">Confirmation Suppression</h1>

                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                Modal body..
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" name="supprimer" id="supprimer" class="btn btn-danger" style="width:100px">Supprimer</button>
                <button type="button" class="btn btn-info" data-dismiss="modal" style="width:100px">Close</button>
            </div>

        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    @if (TempData["SuccessMesage"] != null)
    {
        <script>

  Swal.fire({
  position: 'top-center',
  icon: 'success',
  showConfirmButton: false,
  title: '@TempData["SuccessMesage"]',
  timer: 3000
})
        </script>
    }

    @if (TempData["SuppressionMessage"] != null)
    {
        <script>

  Swal.fire({
  position: 'top-center',
  background:'#c62828',
  color:'#FFFFFF',
  showConfirmButton: false,
  title: '@TempData["SuppressionMessage"]',
  timer: 3000
})

        </script>
    }

    <script>
    function openModaldelete(ID, name) {
    $(".modal-body").html("Voulez vous Supprimez " + name + ID);
    $("#myModal").modal('show');
    $("#supprimer").click(function () {
    window.location.href = "/Crm_PVReunion/DeleteConfirmed?id=" + ID
    });
    }
    </script>
}

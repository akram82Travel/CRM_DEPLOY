        </script>
    }

    <script>
        function openModaldelete(ID, name) {
            $(".modal-body").html("Voulez vous Supprimez " + name + ID);
            $("#myModal").modal('show');
            $("#supprimer").click(function () {
                window.open("/Utilisateurs/DeleteConfirmed?id=" + ID, "_blank");
                $("#myModal").modal('hide');
            });

        }
    </script>
}